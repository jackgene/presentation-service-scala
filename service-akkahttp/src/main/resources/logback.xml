<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <!-- encoders are assigned the type
         ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} %highlight(%-5level) %logger{36} - %msg%n%xException</pattern>
    </encoder>
  </appender>
  
  <logger name="com.jackleow.presentation" level="INFO" />
  
  <root level="INFO">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>